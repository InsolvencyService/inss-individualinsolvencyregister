@model Microsoft.AspNetCore.Mvc.ModelBinding.ModelStateDictionary

@if(!Model.IsValid)
{
    <div class="govuk-error-summary" aria-labelledby="error-summary-title" role="alert" data-disable-auto-focus="true" data-module="govuk-error-summary">
        <h2 class="govuk-error-summary__title" id="error-summary-title">
            There is a problem
        </h2>
        <div class="govuk-error-summary__body">
            <ul class ="govuk-list govuk-error-summary__list">
                @foreach (var field in Model.Select(m => new
                {
                    m.Key,
                    m.Value
                }))
                {
                    if (field.Value != null && field.Value.Errors.Any())
                    {
                        foreach (var error in field.Value.Errors)
                        {
                            <li><a href="#@field.Key">@error.ErrorMessage</a></li>
                        }
                    }
                }
            </ul>
        </div>
    </div>
}