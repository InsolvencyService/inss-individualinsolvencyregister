@model INSS.EIIR.Models.Authentication.User

@{
    ViewData["Title"] = "Admin login – Search the Individual Insolvency Register";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

        <h1 class="govuk-heading-xl">
            Admin login
        </h1>
        
        <form asp-action="AdminLogin" method="post">
            @Html.AntiForgeryToken()

            <fieldset class="govuk-fieldset">
                <div class="govuk-form-group">
                    <label class="govuk-label" for="username">
                        Username
                    </label>
                    <input class="govuk-input govuk-input--width-10" id="username" name="username" type="text" asp-for="UserName">
                </div>
                <div class="govuk-form-group">
                    <label class="govuk-label" for="password">
                        Password
                    </label>
                    <input class="govuk-input govuk-input--width-10" id="password" name="password" type="password" asp-for="Password">
                </div>
            </fieldset>

            <button class="govuk-button" type="submit">
                Login
            </button>
        </form>

    </div>
</div>